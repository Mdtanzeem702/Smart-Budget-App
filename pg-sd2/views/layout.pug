doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title SmartBudget Dashboard
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css", rel="stylesheet")
    style.
      body {
          margin: 0;
          font-family: Arial, sans-serif;
          background-color: #f4f4f9;
      }
      .sidebar {
          width: 250px;
          height: 100vh;
          background-color: #2f3e55;
          color: #fff;
          position: fixed;
          padding-top: 20px;
      }
      .sidebar ul {
          list-style: none;
          padding: 0;
      }
      .sidebar ul li {
          padding: 15px 20px;
          cursor: pointer;
          transition: background 0.3s;
      }
      .sidebar ul li:hover,
      .sidebar ul li.active {
          background-color: #1c2538;
      }
      .content {
          margin-left: 250px;
          padding: 20px;
      }
      .floating-button {
          position: fixed;
          bottom: 20px;
          right: 20px;
          background-color: #007bff;
          color: #fff;
          border-radius: 50%;
          width: 50px;
          height: 50px;
          display: flex;
          justify-content: center;
          align-items: center;
          font-size: 24px;
          cursor: pointer;
          box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      }
      a {
          color: inherit;
          text-decoration: none;
      }     

  body
    .sidebar
      ul
        if !user
          li.nav-item
            a.nav-link(href="/auth/login") Login
          li.nav-item
            a.nav-link(href="/auth/register-form") Register
        if user
          li(class='active')
            a(href='/dashboard/index') Dashboard

          li: a(href="/transactions/index") Transactions
          li: a(href="/budgets/index") Budgets
          li: a(href="/goals") Goals
          li: a(href="#") Reports
          li: a(href="#") Settings
          li: a(href="/logout") Logout
    .floating-button +

    block content
