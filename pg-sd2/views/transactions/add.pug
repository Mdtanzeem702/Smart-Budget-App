extends ../layout.pug

block content
  h1 Add Transaction
  form(action="/transactions/add", method="POST")
    .mb-3
      label(for="description") Description
      input#description.form-control(type="text", name="description", required)
    .mb-3
      label(for="amount") Amount (Â£)
      input#amount.form-control(type="number", name="amount", step="0.01", required)
    .mb-3
      label(for="category_id") Category
      select#category_id.form-select(name="category_id")
        option(value="") Select Category
        each category in categories
          option(value=category.id) #{category.name}
    .mb-3
      label(for="transaction_type") Transaction Type
      select#transaction_type.form-select(name="transaction_type", required)
        option(value="income") Income
        option(value="expense") Expense
    .mb-3
      label(for="transaction_date") Transaction Date
      input#transaction_date.form-control(type="date", name="transaction_date", required)
    button.btn.btn-primary(type="submit") Add Transaction