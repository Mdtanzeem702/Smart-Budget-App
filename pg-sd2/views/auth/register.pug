extends ../layout.pug

block content
  .content
    h2.mt-5.mb-4.text-center Register
    form(action="/auth/register", method="POST", class="w-50 mx-auto p-4 border rounded bg-white shadow-sm")
      .mb-3
        label.form-label(for="username") Username:
        input#username.form-control(type="text", name="username", required, placeholder="Enter your username")
      .mb-3
        label.form-label(for="email") Email:
        input#email.form-control(type="email", name="email", required, placeholder="Enter your email")
      .mb-3
        label.form-label(for="password") Password:
        input#password.form-control(type="password", name="password", required, placeholder="Enter your password")
      button.btn.btn-primary.w-100(type="submit") Register
    p.mt-3.text-center Already have an account? 
      a(href="/login") Login here
