extends ../layout.pug

block content
  .content
    h2.mt-5.mb-4.text-center Login
    form(action="/auth/login", method="POST", class="w-50 mx-auto mt-5 p-4 border rounded bg-white shadow-sm")
      .mb-3
        label.form-label(for="email") Email
        input#email.form-control(type="email", name="email", required, placeholder="Enter your email")
      .mb-3
        label.form-label(for="password") Password
        input#password.form-control(type="password", name="password", required, placeholder="Enter your password")
      button.btn.btn-primary.w-100(type="submit") Login
