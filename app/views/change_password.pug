extends layout

block content
  style.
    .pw-form {
      max-width: 500px;
      margin: 2rem auto;
    }
    .pw-form .form-group + .form-group {
      margin-top: 1rem;
    }
    .pw-form button {
      margin-top: 1.5rem;
    }

  .pw-form
    h1 Change Password
    form(method="POST", action="/profile/password")
      .form-group
        label(for="currentPassword") Current Password
        input#currentPassword(type="password", name="currentPassword", required)
      .form-group
        label(for="newPassword") New Password
        input#newPassword(type="password", name="newPassword", required)
      .form-group
        label(for="confirmPassword") Confirm New Password
        input#confirmPassword(type="password", name="confirmPassword", required)
      button(type="submit") Update Password

    p(style="margin-top:1rem;")
      a(href="/profile") ‚Üê Back to Profile
