extends layout

block content
  .form-container
    h1= pageTitle

    form(method="POST", action=action)
      .form-group
        label(for="category_id") Category ID
        input#category_id(type="number", name="category_id", required, value=transaction.category_id || '')

      .form-group
        label(for="date") Date
        input#date(type="date", name="date", required, value=transaction.date || '')

      .form-group
        label(for="description") Description
        input#description(type="text", name="description", required, value=transaction.description || '')

      .form-group
        label(for="amount") Amount
        input#amount(type="number", step="0.01", name="amount", required, value=transaction.amount || '')

      button(type="submit") Save Transaction

    p
      a(href="/transactions") ‚Üê Back to Transactions
